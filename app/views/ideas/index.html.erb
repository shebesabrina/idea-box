<h3>All them Ideas</h3>

<ul>
  <% @ideas.each do |idea| %>
  <li>
    <%= link_to idea.title, user_idea_path(current_user, idea) %>
    <%= idea.description %>
    <%= link_to "Edit", edit_user_idea_path(current_user, idea) %>
    <%= link_to "Delete", user_idea_path(current_user, idea), method: "delete" %>
  </li>
  <% end %>
</ul>
