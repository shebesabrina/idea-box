<h1>It's about time you signed up!</h1>

<% if flash[:error] %>
<%= flash[:error] %>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :username %>
<%= f.text_field :username %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.submit %>
<% end %>
